{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@home/*": ["src/app/home/*"],
      "@resume/*": ["src/app/resume/*"],
      "@portfolio/*": ["src/app/portfolio/*"],
      "@contact/*": ["src/app/contact/*"],
      "@feedback/*": ["src/app/feedback/*"],
      "@blog/*": ["src/app/blog/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
